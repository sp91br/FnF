<div id="form">


  <%= form_for @user, html: { multipart: true } do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= "New Goal" %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
        <%= form.label "status", class: 'control-label' %>
        <div class="controls">
          <%= form.select(:status_type, options_for_select([['GOAL', 'GOAL'], ['PENDING', 'PENDING']])) %>
        </div>
      </div>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_area :title, id: :user_title %>
    </div>

    <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_area :subtitle, id: :user_subtitle %>
    </div>

    <div class="field">
      <%= form.label :info %>
      <%= form.text_field :info, id: :user_info %>
    </div>

    <div class="field">
      <%= form.label :url %>
      <%= form.text_field :url, id: :user_url %>
    </div>

    <!-- used for uploading images -->
    <div class="field img">
        <%= form.label :image %>
        <%= form.file_field :image %>

    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, id: :user_description %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
